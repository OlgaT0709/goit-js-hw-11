<div class="photo-card">
    <a class="gallery__item" href="{{largeImageURL}}">
        <img class="gallery__image" src="{{webformatURL}}" alt="{{tags}}" loading="lazy" />
    </a>
    <div class="info">
        <p class="info-item">
            <b>Likes </b></br> 
            {{#if likes}}
            {{likes}}
            {{/if}}
        </p>
        <p class="info-item">
            <b>Views </b></br> 
            {{#if views}}
            {{views}}
            {{/if}}
        </p>
        <p class="info-item">
            <b>Comments </b></br> 
            {{#if comments}}
            {{comments}}
            {{/if}}
        </p>
        <p class="info-item">
            <b>Downloads </b></br> 
            {{#if downloads}}
            {{downloads}}
            {{/if}}
        </p>
    </div>
</div>